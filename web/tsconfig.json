{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "moduleResolution":"node",
    "baseUrl": ".",
    "paths": {
      "@/components*": ["src/components*"],
      "@/views*": ["src/views*"],
      "@/webUtils*": ["src/utils*"],
      "@/serverUtils*": ["utils*"],
      "@/db*": ["db*"],
      "@/types*": ["types*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
