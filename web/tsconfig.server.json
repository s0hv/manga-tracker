{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist",
    "target": "es2020",
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "__tests__/**",
    "vitest.config.ts",
    "setupTests.ts"
  ],
  "paths": {
    "@/serverUtils*": ["utils*"],
    "@/common*": ["common*"],
    "@/db*": ["db*"],
    "@/types*": ["types*"]
  }
}
