    "outDir": "dist",
    "target": "es2020",
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    "baseUrl": "."
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src",
    "__tests__/**"
  ]
}
